{
    "compilerOptions": {
        "target": "es2022",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "isolatedModules": false,
        "module": "es2022",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "removeComments": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "./node_modules",
        "vite.config.ts",
    ]
}
