{
    "compilerOptions": {
        "target": "es2022",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "module": "es2022",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "removeComments": true,
    },
    "files": [
        "src/index.ts",
        "vite.config.ts",
        "vite.iife.config.ts"
    ]
}
